            <DataTemplate x:Key="RoomItemTemplate" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="24" />
                        <RowDefinition Height="24" />
                    </Grid.RowDefinitions>
                    <Border CornerRadius="4 4 0 0">
                        <Grid>
                            <toolkit:ImageEx IsCacheEnabled="True"  PlaceholderSource="ms-appx:///Assets/Placeholder/Placeholder.png" 
                                             Stretch="UniformToFill" 
                                             
                                             Source="{Binding Path=Cover}"></toolkit:ImageEx>
                            <Grid VerticalAlignment="Bottom" Padding="8">
                                <Grid.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#66000005" Offset="0.993" />
                                        <GradientStop Color="#00000000" Offset="0" />
                                    </LinearGradientBrush>
                                </Grid.Background>
                                <StackPanel Orientation="Horizontal" >
                                    <Viewbox Width="14" Height="14">
                                        <PathIcon Foreground="White" Data="{StaticResource ResourceKey=IconHot}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </Viewbox>

                                    <TextBlock FontSize="12" Margin="4 2 0 0" Foreground="White" VerticalAlignment="Center"><Run Text="{Binding Path=Online,Converter={StaticResource numberToStringConvert}}"/></TextBlock>
                                </StackPanel>

                            </Grid>


                        </Grid>
                    </Border>
                    <TextBlock Grid.Row="1" Margin="4 4 4 0" MaxLines="1" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Text="{Binding Path=Title}"></TextBlock>
                    <TextBlock Grid.Row="2" Margin="4 0 4 4" TextWrapping="Wrap" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis" Text="{Binding Path=UserName}"></TextBlock>
                </Grid>
            </DataTemplate>
